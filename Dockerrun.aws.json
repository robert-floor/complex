{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
       {
           "name": "client",
           "image": "rflfrubix/multi-client",
           "hostname": "client",
           "essential": false
       } , 
       {
        "name": "server",
        "image": "rflfrubix/multi-server",
        "hostname": "api",
        "essential": false
        },
        {
        "name": "worker",
        "image": "rflfrubix/multi-worker",
        "hostname": "worker",
        "essential": false
        }, 
        {
        "name": "nginx",
        "image": "rflfrubix/multi-nginx",
        "essential": true, 
        "portsMappings": [ 
            {
                "hostPost": 80,
                "containerPort": 80
            }
        ],
        "links": ["client", "server"]


        }
        
    ]
}